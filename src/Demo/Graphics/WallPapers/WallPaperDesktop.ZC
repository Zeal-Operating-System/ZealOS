U0 WallPaperInit(Bool enableTermIcon = TRUE, Bool enableDesktopIcons = TRUE)
{
	if (Fs != sys_task)
	{
		"Must be System Included with SHIFT-F5.\n"
		"(Would crash when code mem was freed.)\n";
		return;
	}
	if(enableTermIcon)
	{
		TermBttnNew;
		NetLogIconNew;
		ShowStatsIconNew;
	
	}
	if(enableDesktopIcons)
	{
    	HomeIconNew;
    	TelnetIconNew;
		PaletteIconNew;
	}
	gr.fp_wall_paper = &WallPaper;
}

